@model ProductForumAdd
@{
    ViewBag.Title = "Add product";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Product" asp-action="AddProduct" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Product Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImgUrl" class="form-label-add-edit">ImgUrl</label>
                <input asp-for="@Model.ImgUrl" asp-controller="Product" asp-action="AddProduct" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Quantity" class="form-label-add-edit">Quantity</label>
                <input asp-for="@Model.Quantity"  class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" )" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Brand" class="form-label-add-edit">Brand</label>
                <input asp-for="@Model.Brand" class="form-control" placeholder="Nike,Addidas..." />
                <span asp-validation-for="@Model.Brand" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" ></textarea>>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <label asp-for="@Model.GenderId" class="form-label-add-edit">Select for who</label>
                <select asp-for="@Model.GenderId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Gender...</option>
                    @foreach (var gender in Model.Gender)
                    {
                        <option value="@gender.Id">@gender.Gender</option>
                    }
                </select>
                <span asp-validation-for="@Model.Gender" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit">Select Category</label>
                <select asp-for="@Model.CategoryId"  class="form-control" aria-required="true">
                    <option disabled selected value="">Select Category...</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.SizeId" class="form-label-add-edit">Select Size</label>
                <select asp-for="@Model.SizeId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Size...</option>
                    @foreach (var size in Model.Sizes)
                    {
                        <option value="@size.Id">@size.SizeName</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.ColourId" class="form-label-add-edit">Select Colour</label>
                <select asp-for="@Model.ColourId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Colour...</option>
                    @foreach (var colour in Model.Colours)
                    {
                        <option value="@colour.Id">@colour.ColourName</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add Product" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}